<%
let star_html = model.pull_star_html();
let events = model.get('events');
%>
<div id="pic" class="text-align-center profile_pic">
    <% if (!_.isEmpty(logo)){ %>
        <img src="<%= logo %>" alt="img">
    <% } %>
    <div class="name"><%= name %></div>
    <div class="row">
        <span class="col-50">Genre: <%= genre %></span>
        <span class="col-50 rating"><%= star_html %></span>
    </div>
    <div class="row">
        <% if (!_.isEmpty(website)) { %>
            <a href="<%= website %>" class="link external" target="_blank">Website</a>
        <% } %>
        <% if (!_.isEmpty(youtube)) { %>
            <a href="<%= youtube %>" class="link external" target="_blank">Youtube</a>
        <% } %>
        <% if (!_.isEmpty(facebook)) { %>
            <a href="<%= facebook %>" class="link external" target="_blank">Facebook</a>
        <% } %>
        <% if (!_.isEmpty(instagram)) { %>
            <a href="<%= instagram %>" class="link external" target="_blank">Instagram</a>
        <% } %>
        <% if (!_.isEmpty(twitter)) { %>
            <a href="<%= twitter %>" class="link external" target="_blank">Twitter</a>
        <% } %>
    </div>
</div>
<% if (events.length >= 1) { %>
    <h4>Events</h4>
    <div id="events" class="list-block media-list">
        <ul>
            <% events.each((e)=>{
                let {id, date, start_time, end_time, when, name, short_desc, img, cost, age_limit} = e.attributes;
                window.attr = e.attributes;
            %>
            <li data-id="<%= id %>">
                <div class="row"><a onclick="app.router.navigate('/event/<%= id %>', {trigger: true})" ><%= name %></a></div>
                <div class="row"><span class="col-40"><%= readable_date(date) %></span><span class="col-30"><%= readable_date(start_time) %></span><span class="col-30"><%= end_time %></span></div>
                <% if (!_.isEmpty(when)){ %>
                    <div class="row"><%= readable_date(when) %></div>
                <% } %>
                <% if (!_.isEmpty(age_limit)){ %>
                    <div class="row">Age Limit: <%= age_limit %></div>
                <% } %>
            </li>
            <% }) %>
        </ul>
    </div>
<% } %>
